<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExamenHockey">
        
        <!-- Activity principal - MenÃº -->
        <activity
            android:name=".MenuPrincipalActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Activity del juego -->
        <activity
            android:name=".JuegoActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ExamenHockey.NoActionBar" />
        
        <!-- Activity de puntuaciones -->
        <activity
            android:name=".PuntuacionesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- MainActivity original (ya no se usa) -->
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>